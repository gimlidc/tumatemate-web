<!DOCTYPE html>
<html lang="cs">
	<head>
		<title>Tu máte maté - stránky ve vývoji</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="twelve columns header_nav_fullwidth">
			<div class="ten columns">
				<ul id="menu-header" class="nav-bar horizontal">
					<li>
						<%= image_tag "../images/logo.png", :alt => "tumátematé.cz", :style => "border:none", :class => "logo-image" %>
					</li>
					<li>
						<%= link_to "Obchod", products_path %>
					</li>
					<li>
						<%= link_to "Příprava maté", :controller => "manual_pages", :action => "preparation" %>
					</li>
					<li>
						<%= link_to "Návody", :controller => "manual_pages", :action => "maintenance" %>
					</li>
					<li>
						<%= link_to "Obchodní podmínky", :controller => "manual_pages", :action => "conditions" %>
					</li>
					<li>
						<%= link_to "Reklamační řád", :controller => "manual_pages", :action => "warranty" %>
					</li>
					<li>
						<%= link_to "Kontakty", :controller => "manual_pages", :action => "contacts" %>
					</li>
				</ul>
			</div>
		</div>
		<!-- END Header -->
		<div style="clear: both"></div>						
			<div id="container">
				<p>
					<%= alert %>
				</p>
				<%= yield %>
			</div>					
		<div class="filling-bottom"></div>
		<div class="bottom-bar"></div>
	</body>
</html>
