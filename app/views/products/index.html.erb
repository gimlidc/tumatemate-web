<h1>Listing products</h1>

<table>
  <tr>
    <th>Imgs</th>
    <th>Imgm</th>
    <th>Imgl</th>
    <th>Price</th>
    <th>Descriptions</th>
    <th>Descriptionl</th>
    <th>Weight</th>
    <th>Stock</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.imgS %></td>
    <td><%= product.imgM %></td>
    <td><%= product.imgL %></td>
    <td><%= product.price %></td>
    <td><%= product.descriptionS %></td>
    <td><%= product.descriptionL %></td>
    <td><%= product.weight %></td>
    <td><%= product.stock %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :method => :delete, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

